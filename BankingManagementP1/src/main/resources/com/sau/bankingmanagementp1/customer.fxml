<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sau.bankingmanagementp1.controller.CustomerController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Label text="Customer ID:"/>
        <TextField fx:id="customerIdField"/>
        <Button text="Fetch" onAction="#handleFetch"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Address:"/>
        <TextField fx:id="addressField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="City:"/>
        <TextField fx:id="cityField"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Delete" onAction="#handleDelete"/>
    </HBox>
</VBox>
